<div id="update_<%= user.id %>" >
  <table class="table table-striped table-bordered table-hover" id="dataTables-example">
    <thead>
      <tr>
        <th><%= t(".id") %></th>
        <th class="name"><%= t(".user_name") %></th>
        <th><%= t(".email") %></th>
        <th class="action"><%= t ".action" %></th>
      </tr>
    </thead>
    <tbody>
      <tr class=" gradeX">
        <td id="catId"><%= user.id %></td>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td class="center">
          <% if current_user.admin? && !current_user?(user) %>
            <%= link_to t("view.users.user.delete"), admin_user_path(user), method: :delete,
              data: { confirm: t("view.users.user.sure") },class: "fa fa-trash btn btn-danger " %>
            <%= link_to user.admin? ? t("view.users.user.setuser") : t("view.users.user.setadmin"), admin_user_path(user), method: :patch, class: "btn btn-success", remote: true %>
          <% end %>
        </td>
      </tr>
    </tbody>
  </table>
</div>
